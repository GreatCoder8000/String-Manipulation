string = "Mary has a little lamb it's fleece was white as snow."

print(string)

print("first latter l is at position: "+str(string.find("l")))

print("word lamb starts at position: "+str(string.find("lamb")))

# print("word lamb starts at position: "+str(string.find("LAMB"))) does not work as strings are case sensitive

print("word it starts at position: "+str(string.find("it")))
#points to the first it

x = string.find("it")+1
print("word it starts at position: "+str(string.find("it",start = x)))

user = input("enter string ")

print(user+" has a length of "+str(len(user)))
